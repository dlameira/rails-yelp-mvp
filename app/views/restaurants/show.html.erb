<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>


<%= link_to "Add review", new_restaurant_review_path(@restaurant)%>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %></li>
  <% end %>
</ul>



<%= link_to "Edit", edit_restaurant_path %>
<%= link_to "Delete", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>

<h1>Reviews#new</h1>

<div class="container">
  <%= simple_form_for ([@restaurant, @review]) do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit %>
  <% end %>
</div>
